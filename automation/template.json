{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Delenvio.com",
  "Mappings": {
    "RegionMap": {
      "us-east-1": {"ZoneId": "Z3AQBSTGFYJSTF", "Endpoint": "s3-website-us-east-1.amazonaws.com"},
      "us-west-1": {"ZoneId": "Z2F56UZL2M1ACD", "Endpoint": "s3-website-us-west-1.amazonaws.com"},
      "us-west-2": {"ZoneId": "Z3BJ6K6RIION7M", "Endpoint": "s3-website-us-west-2.amazonaws.com"},
      "eu-west-1": {"ZoneId": "Z1BKCTXD74EZPE", "Endpoint": "s3-website-eu-west-1.amazonaws.com"},
      "ap-southeast-1": {"ZoneId": "Z3O0J2DXBE1FTB", "Endpoint": "s3-website-ap-southeast-1.amazonaws.com"},
      "ap-southeast-2": {"ZoneId": "Z1WCIGYICN2BYD", "Endpoint": "s3-website-ap-southeast-2.amazonaws.com"},
      "ap-northeast-1": {"ZoneId": "Z2M4EHUR26P7ZW", "Endpoint": "s3-website-ap-northeast-1.amazonaws.com"},
      "sa-east-1": {"ZoneId": "Z31GFT0UA1I2HV", "Endpoint": "s3-website-sa-east-1.amazonaws.com"}
    }
  },
  "Parameters": {
    "env": {"Type": "String", "Default": "dev"},
    "lambda": {"Type": "String", "Default": "WebLambda"},
    "lambdaLocation": {"Type": "String", "Default": "deploy/"},
    "alarmsEmail": {"Type": "String", "Default": "info@wheel42.com"},
    "Origin": {"Type": "String", "Default": "delenvio.com"},
    "bucketName": {"Type": "String", "Default": "storage.delenvio.com"},
    "website": {"Type": "String", "Default": "delenvio.com"}
  },
  "Conditions": {
    "Development": {"Fn::Equals": [{"Ref": "env"}, "dev"]},
    "Production": {"Fn::Equals": [{"Ref": "env"}, "prod"]},
    "Qa": {"Fn::Equals": [{"Ref": "env"}, "qa"]}
  },
  "Resources": {
    "UserTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {"Fn::Join": ["", ["delenvio-user-", {"Ref": "env"}]]},
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          },
          {
            "AttributeName": "created",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "KeyType": "HASH",
            "AttributeName": "id"
          },
          {
            "KeyType": "RANGE",
            "AttributeName": "created"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "1",
          "WriteCapacityUnits": "1"
        }
      }
    },
    "WebLambdaRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {"Service": ["lambda.amazonaws.com"]},
              "Action": ["sts:AssumeRole"]
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": {"Fn::Join": ["", [{"Ref": "lambda"}, "RolePolicy-", {"Ref": "env"}]]},
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["logs:CreateLogGroup", "logs:CreateLogStream", "logs:PutLogEvents"],
                  "Resource": "arn:aws:logs:*:*:*"
                },
                {
                  "Effect": "Allow",
                  "Action": ["lambda:InvokeFunction"],
                  "Resource": "arn:aws:lambda:*:*:*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:GetRecords",
                    "dynamodb:GetItem",
                    "dynamodb:PutItem",
                    "dynamodb:DeleteItem",
                    "dynamodb:Query",
                    "dynamodb:Scan",
                    "dynamodb:UpdateItem",
                    "dynamodb:GetShardIterator",
                    "dynamodb:DescribeStream",
                    "dynamodb:ListStreams",
                    "dynamodb:BatchWriteItem"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "WebLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": {"Fn::Join": ["-", [{"Ref": "lambda"}, {"Ref": "env"}]]},
        "Description": "Website Lambda",
        "Handler": "lambda.handler",
        "Role": {"Fn::GetAtt": ["WebLambdaRole", "Arn"]},
        "Code": {
          "S3Bucket": {"Ref": "bucketName"},
          "S3Key": {"Fn::Join": ["", [{"Ref": "lambdaLocation"}, {"Ref": "lambda"}, "-", {"Ref": "env"}, ".zip"]]}
        },
        "Runtime": "nodejs4.3",
        "Timeout": "300",
        "MemorySize": 128
      }
    },
    "RestApi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Description": "API for deleenvio.com",
        "Name": {"Fn::Join": ["", ["delenvio-api-", {"Ref": "env"}]]}
      }
    },
    "ApiDeployment": {
      "Type": "AWS::ApiGateway::Deployment",
      "Properties": {
        "RestApiId": {"Ref": "RestApi"},
        "Description": {"Fn::Join": [" ", [{"Ref": "env"}, "deployment"]]},
        "StageName": {"Ref": "env"}
      },
      "DependsOn": [
        "RestApi",
        "WebApiResource",
        "PostWebApiMethod",
        "OptionsWebApiMethod"
      ]
    },
    "WebApiResource": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {"Ref": "RestApi"},
        "ParentId": {"Fn::GetAtt": ["RestApi", "RootResourceId"]},
        "PathPart": "web"
      }
    },
    "PostWebApiMethod": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {"Ref": "RestApi"},
        "ResourceId": {"Ref": "WebApiResource"},
        "HttpMethod": "GET",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "AWS",
          "IntegrationHttpMethod": "GET",
          "Uri": {
            "Fn::Join": [
              "", [
                "arn:aws:apigateway:", {"Ref": "AWS::Region"}, ":lambda:path/2015-03-31/functions/",
                {"Fn::GetAtt": ["WebLambda", "Arn"]}, "/invocations"
              ]
            ]
          },
          "RequestTemplates": {
            "application/json": "{ \"sourceIp\": \"$context.identity.sourceIp\", \"fields\": $input.json('$') }"
          },
          "IntegrationResponses": [
            {
              "StatusCode": "201",
              "ResponseParameters": {
                "method.response.header.Access-Control-Allow-Origin": {
                  "Fn::Join": ["", ["'", {"Ref": "Origin"}, "'"]]
                }
              }
            }, {
              "StatusCode": "400",
              "ResponseParameters": {
                "method.response.header.Access-Control-Allow-Origin": {
                  "Fn::Join": ["", ["'", {"Ref": "Origin"}, "'"]]
                }
              },
              "SelectionPattern": ".*Error.*"
            }
          ]
        },
        "MethodResponses": [
          {
            "StatusCode": "201",
            "ResponseParameters": {"method.response.header.Access-Control-Allow-Origin": true}
          }, {
            "StatusCode": "400",
            "ResponseParameters": {"method.response.header.Access-Control-Allow-Origin": true}
          }
        ]
      }
    },
    "OptionsWebApiMethod": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "RestApi"
        },
        "ResourceId": {
          "Ref": "WebApiResource"
        },
        "HttpMethod": "OPTIONS",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "MOCK",
          "RequestTemplates": {
            "application/json": "{ \"statusCode\": 200 }"
          },
          "IntegrationResponses": [
            {
              "StatusCode": "200",
              "ResponseParameters": {
                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key'",
                "method.response.header.Access-Control-Allow-Methods": "'POST,OPTIONS'",
                "method.response.header.Access-Control-Allow-Origin": {
                  "Fn::Join": ["", ["'", {"Ref": "Origin"}, "'"]]
                }
              }
            }
          ]
        },
        "MethodResponses": [
          {
            "StatusCode": "200",
            "ResponseParameters": {
              "method.response.header.Access-Control-Allow-Headers": true,
              "method.response.header.Access-Control-Allow-Methods": true,
              "method.response.header.Access-Control-Allow-Origin": true
            }
          }
        ]
      }
    },




    "WebsiteBucketProd": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {"Ref": "website"},
        "AccessControl": "BucketOwnerFullControl",
        "Tags": [{"Key": "application", "Value": {"Ref": "website"}}],
        "CorsConfiguration": {
          "CorsRules": [
            {
              "AllowedOrigins": [{"Ref": "Origin"}],
              "AllowedMethods": ["GET"],
              "MaxAge": 3000,
              "AllowedHeaders": ["Authorization"]
            }
          ]
        },
        "WebsiteConfiguration": {
          "ErrorDocument": "500.html",
          "IndexDocument": "index.html"
        }
      }
    },
    "WebsiteBucketProd2": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {"Fn::Join": ["", ["www.", {"Ref": "website"}]]},
        "AccessControl": "BucketOwnerFullControl",
        "Tags": [{"Key": "application", "Value": {"Ref": "website"}}],
        "CorsConfiguration": {
          "CorsRules": [
            {
              "AllowedOrigins": [{"Ref": "Origin"}],
              "AllowedMethods": ["GET"],
              "MaxAge": 3000,
              "AllowedHeaders": ["Authorization"]
            }
          ]
        },
        "WebsiteConfiguration": {
          "RedirectAllRequestsTo": {"HostName": {"Ref": "website"}}
        }
      }
    },
    "WebsiteBucketDev": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {"Fn::Join": [".", ["dev", {"Ref": "website"}]]},
        "AccessControl": "BucketOwnerFullControl",
        "Tags": [{"Key": "application", "Value": {"Ref": "website"}}],
        "CorsConfiguration": {
          "CorsRules": [
            {
              "AllowedOrigins": [{"Ref": "Origin"}],
              "AllowedMethods": ["GET"],
              "MaxAge": 3000,
              "AllowedHeaders": ["Authorization"]
            }
          ]
        },
        "WebsiteConfiguration": {
          "ErrorDocument": "500.html",
          "IndexDocument": "index.html"
        }
      }
    },
    "WebsiteBucketQa": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {"Fn::Join": [".", ["qa", {"Ref": "website"}]]},
        "AccessControl": "BucketOwnerFullControl",
        "Tags": [{"Key": "application", "Value": {"Ref": "website"}}],
        "CorsConfiguration": {
          "CorsRules": [
            {
              "AllowedOrigins": [{"Ref": "Origin"}],
              "AllowedMethods": ["GET"],
              "MaxAge": 3000,
              "AllowedHeaders": ["Authorization"]
            }
          ]
        },
        "WebsiteConfiguration": {
          "ErrorDocument": "500.html",
          "IndexDocument": "index.html"
        }
      }
    },
    "WebsiteProdPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {"Ref": "WebsiteBucketProd"},
        "PolicyDocument": {
          "Statement": [
            {
              "Sid": "AllowWebLambdaAccessotS3",
              "Effect": "Allow",
              "Action": ["s3:*"],
              "Principal": {"AWS": {"Fn::GetAtt": ["WebLambdaRole", "Arn"]}},
              "Resource": [{"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "WebsiteBucketProd"}, "/*"]]}]
            },
            {
              "Sid": "AllowInternetAccesstoS3Resources",
              "Effect": "Allow",
              "Action": ["s3:GetObject"],
              "Principal": "*",
              "Resource": [{"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "WebsiteBucketProd"}, "/*"]]}]
            }
          ]
        }
      }
    },
    "WebsiteProd2Policy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {"Ref": "WebsiteBucketProd2"},
        "PolicyDocument": {
          "Statement": [
            {
              "Sid": "AllowWebLambdaAccessotS3",
              "Effect": "Allow",
              "Action": ["s3:*"],
              "Principal": {"AWS": {"Fn::GetAtt": ["WebLambdaRole", "Arn"]}},
              "Resource": [{"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "WebsiteBucketProd2"}, "/*"]]}]
            },
            {
              "Sid": "AllowInternetAccesstoS3Resources",
              "Effect": "Allow",
              "Action": ["s3:GetObject"],
              "Principal": "*",
              "Resource": [{"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "WebsiteBucketProd2"}, "/*"]]}]
            }
          ]
        }
      }
    },
    "WebsiteQaPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {"Ref": "WebsiteBucketDev"},
        "PolicyDocument": {
          "Statement": [
            {
              "Sid": "AllowWebLambdaAccessotS3",
              "Effect": "Allow",
              "Action": ["s3:*"],
              "Principal": {"AWS": {"Fn::GetAtt": ["WebLambdaRole", "Arn"]}},
              "Resource": [{"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "WebsiteBucketDev"}, "/*"]]}]
            },
            {
              "Sid": "AllowInternetAccesstoS3Resources",
              "Effect": "Allow",
              "Action": ["s3:GetObject"],
              "Principal": "*",
              "Resource": [{"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "WebsiteBucketDev"}, "/*"]]}]
            }
          ]
        }
      }
    },
    "WebsiteDevPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {"Ref": "WebsiteBucketQa"},
        "PolicyDocument": {
          "Statement": [
            {
              "Sid": "AllowWebLambdaAccessotS3",
              "Effect": "Allow",
              "Action": ["s3:*"],
              "Principal": {"AWS": {"Fn::GetAtt": ["WebLambdaRole", "Arn"]}},
              "Resource": [{"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "WebsiteBucketQa"}, "/*"]]}]
            },
            {
              "Sid": "AllowInternetAccesstoS3Resources",
              "Effect": "Allow",
              "Action": ["s3:GetObject"],
              "Principal": "*",
              "Resource": [{"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "WebsiteBucketQa"}, "/*"]]}]
            }
          ]
        }
      }
    },
    "WebsiteDNS": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "Name": {"Ref": "website"},
        "HostedZoneTags": [{"Key": "application", "Value": {"Ref": "website"}}]
      }
    },
    "Website": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneName": {"Fn::Join": ["", [{"Ref": "website"}, "."]]},
        "Comment": {"Fn::Join": ["", [{"Ref": "website"}, ""]]},
        "RecordSets": [
          {
            "Name": {"Ref": "website"},
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": {"Fn::FindInMap": ["RegionMap", {"Ref": "AWS::Region"}, "ZoneId"]},
              "DNSName": {"Fn::FindInMap": ["RegionMap", {"Ref": "AWS::Region"}, "Endpoint"]}
            }
          },
          {
            "Name": {"Fn::Join": ["", ["www.", {"Ref": "website"}]]},
            "Type": "CNAME",
            "TTL": "900",
            "ResourceRecords": [
              {"Fn::Join": ["", [{"Ref": "WebsiteBucketProd2"}, ".s3-website-", {"Ref": "AWS::Region"}, ".amazonaws.com."]]}
            ]
          },
          {
            "Name": {"Fn::Join": ["", ["dev.", {"Ref": "website"}]]},
            "Type": "CNAME",
            "TTL": "900",
            "ResourceRecords": [
              {"Fn::Join": ["", [{"Ref": "WebsiteBucketDev"}, ".s3-website-", {"Ref": "AWS::Region"}, ".amazonaws.com."]]}
            ]
          },
          {
            "Name": {"Fn::Join": ["", ["qa.", {"Ref": "website"}]]},
            "Type": "CNAME",
            "TTL": "900",
            "ResourceRecords": [
              {"Fn::Join": ["", [{"Ref": "WebsiteBucketQa"}, ".s3-website-", {"Ref": "AWS::Region"}, ".amazonaws.com."]]}
            ]
          }
        ]
      }
    }
  },
  "Outputs": {
    "HostedZoneName": {"Value": {"Fn::Join": ["", [{"Ref": "website"}, "."]]}},
    "www": {"Value": {"Fn::Join": ["", [{"Ref": "website"}, "."]]}},
    "www2": {"Value": {"Fn::Join": ["", ["www.", {"Ref": "website"}, "."]]}},
    "DNSName": {"Value": {"Fn::GetAtt": ["WebsiteBucketProd", "DomainName"]}},
    "HostedZoneId": {"Value": {"Ref": "WebsiteDNS"}},
    "WebsiteURL": {"Value": {"Fn::GetAtt": ["WebsiteBucketProd", "WebsiteURL"]}},
    "WebsiteHttpsURL": {"Value": {"Fn::Join": ["", ["https://", {"Fn::GetAtt": ["WebsiteBucketProd", "DomainName"]}]]}}
  }
}